<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<welcome-file-list>
		<welcome-file>Main</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>Main</servlet-name>
		<servlet-class>es.upm.dit.isst.MainServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Offers</servlet-name>
		<servlet-class>es.upm.dit.isst.OffersDashboard</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddOffer</servlet-name>
		<servlet-class>es.upm.dit.isst.AddOffer</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RemoveOffer</servlet-name>
		<servlet-class>es.upm.dit.isst.RemoveOffer</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UpdateOffer</servlet-name>
		<servlet-class>es.upm.dit.isst.UpdateOffer</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Subastas</servlet-name>
		<servlet-class>es.upm.dit.isst.SubastasDashboard</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddSubastas</servlet-name>
		<servlet-class>es.upm.dit.isst.AddSubasta</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RemoveSubasta</servlet-name>
		<servlet-class>es.upm.dit.isst.RemoveSubasta</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UpdateSubasta</servlet-name>
		<servlet-class>es.upm.dit.isst.UpdateSubasta</servlet-class>
	</servlet>
	<servlet>    
		<servlet-name>NewOfferMailServlet</servlet-name>
		<servlet-class>es.upm.dit.isst.mail.NewOfferMailServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>StatsServlet</servlet-name>
		<servlet-class>es.upm.dit.isst.StatsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StatsServlet</servlet-name>
		<url-pattern>/estadisticas</url-pattern>
	</servlet-mapping> 
	<servlet-mapping>   
		<servlet-name>NewOfferMailServlet</servlet-name>
		<url-pattern>/mandamail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateOffer</servlet-name>
		<url-pattern>/actualizaoferta</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateSubasta</servlet-name>
		<url-pattern>/actualizasubasta</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Main</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Offers</servlet-name>
		<url-pattern>/ofertas</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Subastas</servlet-name>
		<url-pattern>/pujas</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddOffer</servlet-name>
		<url-pattern>/nuevaoferta</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddSubastas</servlet-name>
		<url-pattern>/nuevasubasta</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RemoveOffer</servlet-name>
		<url-pattern>/eliminaoferta</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RemoveSubasta</servlet-name>
		<url-pattern>/eliminasubasta</url-pattern>
	</servlet-mapping>
</web-app>
